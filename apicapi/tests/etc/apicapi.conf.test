[DEFAULT]
#debug=True

[database]
connection = 'sqlite://'


[apic]
# Hostname:port list of APIC controllers
apic_hosts = 1.1.1.1,1.1.1.2,1.1.1.3

# Username for the APIC controller
apic_username = admin

# Password for the APIC controller
apic_password = password

# Whether use SSl for connecting to the APIC controller or not
apic_use_ssl = True

verify_ssl_certificate = False
scope_names = False

[apic_physdom:phys]

[apic_physdom:phys2]

[apic_vmdom:ostack]

[apic_vmdom:ostack2]
apic_vmm_type=OpenStack

[apic_vmdom:vmware]
apic_vmm_type=vmware

[apic_vmdom:vmware2]
apic_vmm_type=VMware
